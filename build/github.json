{
    "name": "generic-builder",
    "type": "img",
    "build_in": "github",
    "clear_build_path": true,
    "next":
    [
        {
            "build": "docker",
            "run_when": [
                "release"
            ],
            "config":
            {
                "base_image": "eons/img_base",
                "image_name": "eons/img_generic-builder",
                "image_os": "debian",
                "install":
                [
                    "python3-pip",
                    "ca-certificates",
                    "curl",
                    "wget",
                    "gnupg",
                    "lsb-release",
                    "build-essential",
                    "cmake",
                    "gdb",
                    "gcc-arm-none-eabi",
                    "binutils-arm-none-eabi",
                    "openocd",
                    "gcc-aarch64-linux-gnu",
                    "openssl",
                    "libssl-dev",
                    "git"
                ],
                "tags" : [
                    "latest"
                ]
            }
        }
    ]
}